.brand-bg .logo-large,
.brand-bg .logo-medium,
.brand-bg .logo-small {
  color: var(--dark);
}

.brand-bg .logo span,
.brand-bg .logo-large span,
.brand-bg .logo-medium span,
.brand-bg .logo-small span {
  color: var(--primary-dark);
}

/* Animación de pulso (según especificación) */
@keyframes pulse {
  0% {
    transform: scale(1);
