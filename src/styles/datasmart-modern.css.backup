  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  position: relative;
  z-index: 1;
}

.example-nav .logo-small {
  color: white;
}

.example-nav .logo-small span {
  color: var(--secondary-light);
}

.nav-links {
  display: flex;
  gap: 20px;
}

.nav-links a {
  color: rgba(255,255,255,0.8);
  text-decoration: none;
  transition: color 0.3s;
}

.nav-links a:hover {
  color: white;
}

.btn-brand {
  background: white;
  color: var(--primary);
  padding: 10px 20px;
  border-radius: 6px;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s;
}

.btn-brand:hover {
  background: var(--secondary);
  color: white;
  transform: translateY(-2px);
}

/* Nota de estilo */
.style-note {
  background: linear-gradient(135deg, var(--secondary-light), var(--secondary));
  color: white;
  padding: 20px;
  border-radius: 10px;
  margin: 20px 0;
  text-align: center;
}

/* Demo de tipografía */
.typography-demo {
  background: var(--light);
  padding: 30px;
  border-radius: 15px;
  margin: 30px 0;
}

.font-example {
  margin-bottom: 20px;
  padding-bottom: 15px;
  border-bottom: 1px solid var(--gray-light);
}

.font-large {
  font-size: 2rem;
  font-weight: 700;
  color: var(--primary);
}

.font-medium {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--dark);
}

.font-small {
  font-size: 1rem;
  color: var(--gray);
}

/* Títulos con estilo de marca */
.brand-title {
  color: var(--primary);
  font-size: 1.8rem;
  margin-bottom: 20px;
  padding-bottom: 10px;
  border-bottom: 3px solid var(--secondary);
  display: inline-block;
}

/* Responsive design para la guía de marca */
@media (max-width: 768px) {
  .logo-simple {
    font-size: 2rem;
    padding-left: 20px;
  }
  
  .logo-simple::before {
    width: 18px;
    height: 18px;
    left: -10px;
  }
  
  .logo-simple::after {
    width: 12px;
    height: 12px;
    left: -15px;
  }
  
  .colors-grid {
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 15px;
  }
  
  .style-features {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .logo-variations {
    flex-direction: column;
    gap: 20px;
  }
  
  .example-nav {
    flex-direction: column;
    gap: 15px;
    text-align: center;
  }
  
  .nav-links {
    justify-content: center;
  }
  
  .brand-guide-content {
    padding: 20px;
  }
}

/* ===== LOGO DATASMART - ESPECIFICACIÓN OFICIAL ===== */

/* Logo Principal */
.logo {
  font-size: 1.8rem;
  font-weight: 700;
  color: var(--primary);
  position: relative;
  display: inline-flex;
  align-items: center;
  padding-left: 30px;
}

.logo span {
  color: var(--secondary);
}

.logo::before {
  content: '';
  position: absolute;
  width: 20px;
  height: 20px;
  background-color: var(--secondary-light);
  border-radius: 50%;
  left: -10px;
  top: 0;
  animation: pulse 3s infinite;
}

.logo::after {
  content: '';
  position: absolute;
  width: 12px;
  height: 12px;
  background-color: var(--primary-light);
  border-radius: 50%;
  left: -14px;
  bottom: 0;
  animation: pulse 2s infinite 1s;
}

/* Logo Grande */
.logo-large {
  font-size: 3rem;
  font-weight: 700;
  color: var(--primary);
  position: relative;
  display: inline-flex;
  align-items: center;
  padding-left: 40px;
  margin-bottom: 20px;
}

.logo-large span {
  color: var(--secondary);
}

.logo-large::before {
  content: '';
  position: absolute;
  width: 25px;
  height: 25px;
  background-color: var(--secondary-light);
  border-radius: 50%;
  left: -15px;
  top: 5px;
  animation: pulse 3s infinite;
}

.logo-large::after {
  content: '';
  position: absolute;
  width: 15px;
  height: 15px;
  background-color: var(--primary-light);
  border-radius: 50%;
  left: -20px;
  bottom: 5px;
  animation: pulse 2s infinite 1s;
}

/* Logo Mediano */
.logo-medium {
  font-size: 2.2rem;
  font-weight: 700;
  color: var(--primary);
  position: relative;
  display: inline-flex;
  align-items: center;
  padding-left: 35px;
  margin-bottom: 15px;
}

.logo-medium span {
  color: var(--secondary);
}

.logo-medium::before {
  content: '';
  position: absolute;
  width: 22px;
  height: 22px;
  background-color: var(--secondary-light);
  border-radius: 50%;
  left: -12px;
  top: 2px;
  animation: pulse 3s infinite;
}

.logo-medium::after {
  content: '';
  position: absolute;
  width: 14px;
  height: 14px;
  background-color: var(--primary-light);
  border-radius: 50%;
  left: -17px;
  bottom: 2px;
  animation: pulse 2s infinite 1s;
}

/* Logo Pequeño */
.logo-small {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--primary);
  position: relative;
  display: inline-flex;
  align-items: center;
  padding-left: 25px;
  margin-bottom: 10px;
}

.logo-small span {
  color: var(--secondary);
}

.logo-small::before {
  content: '';
  position: absolute;
  width: 15px;
  height: 15px;
  background-color: var(--secondary-light);
  border-radius: 50%;
  left: -8px;
  top: 1px;
  animation: pulse 3s infinite;
}

.logo-small::after {
  content: '';
  position: absolute;
  width: 10px;
  height: 10px;
  background-color: var(--primary-light);
  border-radius: 50%;
  left: -12px;
  bottom: 1px;
  animation: pulse 2s infinite 1s;
}

/* Variantes de fondo */
.dark-bg .logo,
.dark-bg .logo-large,
.dark-bg .logo-medium, 
.dark-bg .logo-small {
  color: white;
}

.dark-bg .logo span,
.dark-bg .logo-large span,
.dark-bg .logo-medium span,
.dark-bg .logo-small span {
  color: var(--secondary-light);
}

.gradient-bg .logo,
.gradient-bg .logo-large,
.gradient-bg .logo-medium,
.gradient-bg .logo-small {
  color: white;
}

.gradient-bg .logo span,
.gradient-bg .logo-large span,
.gradient-bg .logo-medium span,
.gradient-bg .logo-small span {
  color: var(--secondary-light);
}

