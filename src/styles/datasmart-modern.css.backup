:root {
  --primary: #2563eb;
  --primary-dark: #1d4ed8;
  --primary-light: #60a5fa;
  --secondary: #10b981;
  --secondary-dark: #059669;
  --secondary-light: #34d399;
  --dark: #111827;
  --light: #f9fafb;
  --gray: #6b7280;
  --gray-light: #e5e7eb;
}

/* Base styles with improved animations */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  line-height: 1.6;
  overflow-x: hidden;
}

/* Enhanced slide container */
.datasmart-slide {
  position: relative;
  overflow: hidden;
  border-radius: 24px;
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

