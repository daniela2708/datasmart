  background: linear-gradient(135deg, var(--primary), var(--primary-dark));
  color: white;
  padding: 40px;
  border-radius: 15px;
  margin: 30px 0;
  position: relative;
  overflow: hidden;
}

.usage-example::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 200px;
  height: 200px;
